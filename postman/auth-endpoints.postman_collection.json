{
"info": {
 "name": "GotovDoc Authentication API",
 "description": "Complete authentication endpoints for GotovDoc backend",
 "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
},
"item": [
 {
 "name": "Register",
 "request": {
  "method": "POST",
  "header": [
  {
   "key": "Content-Type",
   "value": "application/json",
   "type": "text"
  }
  ],
  "body": {
  "mode": "raw",
  "raw": "{\n  \"email\": \"user@example.com\",\n  \"password\": \"SecurePassword123!\",\n  \"firstName\": \"John\",\n  \"lastName\": \"Doe\"\n}",
  "options": {
   "raw": {
   "language": "json"
   }
  }
  },
  "url": {
  "raw": "{{base_url}}/api/auth/register",
  "host": [
   "{{base_url}}"
  ],
  "path": [
   "api",
   "auth",
   "register"
  ]
  },
  "description": "Register a new user account with email, password, firstName, and lastName"
 },
 "response": []
 },
 {
 "name": "Login",
 "event": [
  {
  "listen": "test",
  "script": {
   "exec": [
   "// Save tokens to environment variables",
   "const accessToken = pm.response.headers.get('Authorization-Access');",
   "const refreshToken = pm.response.headers.get('Authorization-Refresh');",
   "",
   "if (accessToken) {",
   "    pm.environment.set('access_token', accessToken);",
   "}",
   "",
   "if (refreshToken) {",
   "    pm.environment.set('refresh_token', refreshToken);",
   "}"
   ],
   "type": "text/javascript"
  }
  }
 ],
 "request": {
  "method": "POST",
  "header": [
  {
   "key": "Content-Type",
   "value": "application/json",
   "type": "text"
  }
  ],
  "body": {
  "mode": "raw",
  "raw": "{\n  \"email\": \"user@example.com\",\n  \"password\": \"SecurePassword123!\"\n}",
  "options": {
   "raw": {
   "language": "json"
   }
  }
  },
  "url": {
  "raw": "{{base_url}}/api/auth/login",
  "host": [
   "{{base_url}}"
  ],
  "path": [
   "api",
   "auth",
   "login"
  ]
  },
  "description": "Login with email and password. Returns access and refresh tokens in headers."
 },
 "response": []
 },
 {
 "name": "Refresh Access Token",
 "event": [
  {
  "listen": "test",
  "script": {
   "exec": [
   "// Save new access token to environment",
   "const accessToken = pm.response.headers.get('Authorization-Access');",
   "",
   "if (accessToken) {",
   "    pm.environment.set('access_token', accessToken);",
   "}"
   ],
   "type": "text/javascript"
  }
  }
 ],
 "request": {
  "method": "POST",
  "header": [
  {
   "key": "Authorization-Refresh",
   "value": "{{refresh_token}}",
   "type": "text"
  }
  ],
  "url": {
  "raw": "{{base_url}}/api/auth/refresh",
  "host": [
   "{{base_url}}"
  ],
  "path": [
   "api",
   "auth",
   "refresh"
  ]
  },
  "description": "Get a new access token using the refresh token"
 },
 "response": []
 },
 {
 "name": "Get Current User",
 "request": {
  "method": "GET",
  "header": [
  {
   "key": "Authorization-Access",
   "value": "{{access_token}}",
   "type": "text"
  }
  ],
  "url": {
  "raw": "{{base_url}}/api/user/get",
  "host": [
   "{{base_url}}"
  ],
  "path": [
   "api",
   "user",
   "get"
  ]
  },
  "description": "Get current authenticated user information"
 },
 "response": []
 },
 {
 "name": "Change Password",
 "request": {
  "method": "POST",
  "header": [
  {
   "key": "Authorization-Access",
   "value": "{{access_token}}",
   "type": "text"
  },
  {
   "key": "Content-Type",
   "value": "application/json",
   "type": "text"
  }
  ],
  "body": {
  "mode": "raw",
  "raw": "{\n  \"oldPassword\": \"SecurePassword123!\",\n  \"newPassword\": \"NewSecurePassword456!\"\n}",
  "options": {
   "raw": {
   "language": "json"
   }
  }
  },
  "url": {
  "raw": "{{base_url}}/api/auth/change-password",
  "host": [
   "{{base_url}}"
  ],
  "path": [
   "api",
   "auth",
   "change-password"
  ]
  },
  "description": "Change password for authenticated user"
 },
 "response": []
 },
 {
 "name": "Forgotten Password",
 "request": {
  "method": "POST",
  "header": [
  {
   "key": "Content-Type",
   "value": "application/json",
   "type": "text"
  }
  ],
  "body": {
  "mode": "raw",
  "raw": "{\n  \"email\": \"user@example.com\"\n}",
  "options": {
   "raw": {
   "language": "json"
   }
  }
  },
  "url": {
  "raw": "{{base_url}}/api/auth/forgotten-password",
  "host": [
   "{{base_url}}"
  ],
  "path": [
   "api",
   "auth",
   "forgotten-password"
  ]
  },
  "description": "Request password reset email"
 },
 "response": []
 },
 {
 "name": "Reset Password",
 "request": {
  "method": "POST",
  "header": [
  {
   "key": "Content-Type",
   "value": "application/json",
   "type": "text"
  }
  ],
  "body": {
  "mode": "raw",
  "raw": "{\n  \"token\": \"Bearer <token-from-email>\",\n  \"password\": \"NewSecurePassword456!\"\n}",
  "options": {
   "raw": {
   "language": "json"
   }
  }
  },
  "url": {
  "raw": "{{base_url}}/api/auth/reset-password",
  "host": [
   "{{base_url}}"
  ],
  "path": [
   "api",
   "auth",
   "reset-password"
  ]
  },
  "description": "Reset password using token from email"
 },
 "response": []
 }
],
"variable": [
 {
 "key": "base_url",
 "value": "http://localhost:3000",
 "type": "string"
 }
]
}

